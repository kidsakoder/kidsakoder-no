{
  "name": "website",
  "author": "Bouvet",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "description": "Front-end resources for Enonic XP.",
  "homepage": "http://www.bouvet.no",
  "readme": "See README.md",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "ssh://git@git.bouvet.no/exm/enonic-xp-vanilla-starter.git"
  },
  "devDependencies": {
    "jshint": "latest",
    "browserify": "latest",
    "autoprefixer": "latest",
    "cssmin": "latest",
    "rimraf": "latest",
    "node-sass": "3.8.0",
    "mkdirp": "latest",
    "postcss-cli": "latest",
    "uglify-js": "latest",
    "ncp": "latest"
  },
  "dependencies": {},
  "scripts": {
    "prebuild": "./npmw run mkdir",
    "clean": "rimraf ../main/resources/assets",
    "build": "./npmw run build:css && ./npmw run build:js && ./npmw run build:uglyjs && ./npmw run build:images",
    "lint": "jshint scripts/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "mkdir": "mkdirp ../main/resources/assets/css ../main/resources/assets/js ../main/resources/assets/js/templates ../main/resources/assets/images ../main/resources/assets/fonts/bootstrap",
    "prebuild:sass": "./npmw run mkdir",
    "build:sass": "node-sass styles/main.scss > ../main/resources/assets/css/style.css",
    "postbuild:sass": "./npmw run build:fonts",
    "prebuild:css": "./npmw run mkdir && ./npmw run build:sass",
    "build:css": "node-sass styles/main.scss | postcss --use autoprefixer | cssmin > ../main/resources/assets/css/style.min.css",
    "prebuild:js": "./npmw run mkdir && ./npmw run lint",
    "build:uglyjs": "browserify scripts/main.js | uglifyjs -c -m > ../main/resources/assets/js/main.min.js && browserify scripts/vendor.js| uglifyjs -c -m > ../main/resources/assets/js/vendor.min.js",
    "build:js": "browserify scripts/main.js > ../main/resources/assets/js/main.min.js && browserify scripts/vendor.js > ../main/resources/assets/js/vendor.min.js",
    "build:images": "ncp images/ ../main/resources/assets/images/",
    "build:fonts": "ncp fonts/ ../main/resources/assets/fonts/"
  }
}
